---
import "../styles/global.css";
const { title = "Portfolio", description = "Proyectos y CV", ogImage = "/og.png" } = Astro.props;

// Prefijo seguro para rutas en GitHub Pages y local
const BASE = import.meta.env.BASE_URL || "/";
// Construye ruta con base y conviÃ©rtela a absoluta usando Astro.site
const ogPath = `${BASE}${(ogImage || "/og.png").replace(/^\//, "")}`;
const ogImageUrl = new URL(ogPath, Astro.site).toString();
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta name="theme-color" content="#0f172a" />
    <!-- Inicializa tema muy pronto (sin flash) -->
    <script is:inline>
      const pref = localStorage.getItem('theme');
      const sys = window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
      const theme = pref || sys;
      document.documentElement.classList.toggle('theme-light', theme === 'light');
      document.documentElement.classList.toggle('theme-dark', theme !== 'light');
    </script>
  </head>
  <body>
    <a href="#contenido" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-white/10 px-3 py-2 rounded">Saltar al contenido</a>
    <!-- Toggle tema -->
    <button id="theme-toggle" class="btn fixed top-3 right-3 z-50" aria-label="Cambiar tema">ðŸŒ“</button>
    <main id="contenido"><slot /></main>

    <script is:inline>
      const btn = document.getElementById('theme-toggle');
      btn?.addEventListener('click', () => {
        const html = document.documentElement;
        const light = html.classList.toggle('theme-light');
        html.classList.toggle('theme-dark', !light);
        localStorage.setItem('theme', light ? 'light' : 'dark');
      });
    </script>
  </body>
</html>
